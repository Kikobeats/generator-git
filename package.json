{
  "name": "generator-git",
  "description": "Create the configurable scaffolding to start with a git-like project.",
  "homepage": "https://nicedoc.io/kikobeats/generator-git",
  "version": "4.0.3",
  "main": "app/index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "contributors": [
    {
      "name": "kutyel",
      "email": "flaviocorpa@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kikobeats/generator-git.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/generator-git/issues"
  },
  "keywords": [
    "generator",
    "git",
    "github",
    "initialize",
    "project",
    "scaffold",
    "yeoman",
    "yeoman-generator"
  ],
  "dependencies": {
    "chalk": "~5.0.0",
    "finepack": "~2.10.11",
    "gh-user": "~5.0.0",
    "humanize-url": "~2.1.0",
    "inquirer-npm-name": "~4.0.0",
    "latest-version": "~5.1.0",
    "lodash": "~4.17.21",
    "mkdirp": "~1.0.4",
    "yeoman-generator": "~5.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "latest",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "app"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "contributors": "(git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github && (ci-publish || npm publish --access=public)",
    "prerelease": "npm run update:check && npm run contributors",
    "pretest": "npm run lint",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "ava",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": [
      "finepack"
    ],
    "*.js,!*.min.js,": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged"
  },
  "standard": {
    "ignore": [
      "app/templates/bin/_index.js"
    ]
  }
}
